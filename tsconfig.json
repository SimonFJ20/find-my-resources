{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "composite": true,
    "incremental": true,
    // "extendedDiagnostics": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "lib": ["ES2021"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceRoot": "./src",
    "tsBuildInfoFile": ".tsbuildinfo",
    "esModuleInterop": true,
  },
  "include": ["./src/**/*.ts"]
}